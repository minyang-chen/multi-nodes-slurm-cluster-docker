  slurmjupyter:
    image: slurm-jupyter:latest
    hostname: slurmjupyter
    user: admin
    deploy:
      resources:
        reservations:
          devices:
            - driver: nvidia
              count: 1
              capabilities: [gpu]        
    volumes:
      - shared-vol:/home/admin
    ports:
      - 8888:8888
    links:
      - slurmmaster
